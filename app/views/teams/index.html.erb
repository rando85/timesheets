<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="75%">Team</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team %></td>
        <td><%= link_to "<i class='fas fa-eye'></i> Show".html_safe, team, class: "btn btn-info" %></td>
        <td><%= link_to "<i class='fas fa-edit'></i> Edit".html_safe, edit_team_path(team), class: "btn btn-warning" %></td>
        <td><%= link_to "<i class='fas fa-trash-alt'></i> Delete".html_safe, team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<i class='fas fa-plus'></i> New Team".html_safe, new_team_path, class: "btn btn-block btn-success" %>
