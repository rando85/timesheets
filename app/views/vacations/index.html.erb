<p id="notice"><%= notice %></p>

<h1>Vacations</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Consultant</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacations.each do |vacation| %>
      <tr>
        <td><%= vacation.day.date_str %></td>
        <td><%= vacation.consultant.name %></td>
        <td><%= vacation.reason.reason %></td>
        <td><%= link_to 'Show', vacation %></td>
        <td><%= link_to 'Edit', edit_vacation_path(vacation) %></td>
        <td><%= link_to 'Destroy', vacation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

