<h1>Reports#daily</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Team</th>
      <th>Consultant</th>
      <% @days.each do |d| %>
        <th><%= d.date_str %></th>
      <% end %>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @result.each do |t| %>
      <% t[1].each do |c| %>
        <tr>
          <td><%= t[0] %></td>
          <td><%= c[0] %></td>
          <% total = 0
          c[1].each do |h|
            total += h[1]
          %>
            <td><%= h[1] %></td>
          <% end %>
          <td><%= total %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

